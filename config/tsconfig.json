{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "baseUrl": "../",
    "typeRoots": [
      "../packages/"
    ],
    "types": [
      "jest"
    ],
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "paths": {
    }
  },
  "files": [
    "**/*.ts",
    "**/*.d.ts"
  ]
}
